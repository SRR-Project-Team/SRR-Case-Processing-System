# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LLM Provider (openai or volcengine)
LLM_PROVIDER=openai

# Proxy Configuration (for regions where OpenAI is blocked)
# Set to false for local development or if you don't need proxy
OPENAI_USE_PROXY=false
OPENAI_PROXY_URL=http://127.0.0.1:7890

# Authentication / JWT (required in secure mode)
# Use a high-entropy value with at least 32 chars
JWT_SECRET_KEY=replace_with_a_strong_random_secret_at_least_32_chars
# Access token lifetime in minutes (default in code is 60)
ACCESS_TOKEN_EXPIRE_MINUTES=60
# If true, app startup fails when security config is weak/missing
SECURE_MODE=true

# CORS Configuration
# For local development, allow localhost:3000 (React dev server)
# For production, set to your actual frontend URL
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
